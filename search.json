---
---
[
  {% for post in site.posts %}
    {

      "title"    : "{{ post.title | strip_html | escape }}",
      "tags" : "{{ post.tags | join: ', ' }}",
      "url"     : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date | date: "%b %-d, %Y" }}",
      "content" : "{{ post.content | strip_html | truncatewords: 40 | escape }}"

    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
